/**app.wxss**/
@import './fonts/iconfont.wxss';

.page{
    /*background-color: #f1f1f1;*/
    background-color: #f4f4f4;
    background-image: linear-gradient(-225deg, #FEFEFE 0%, #FFE6FA 100%);
    background-size : cover;
    padding: 10px;
    min-height: 100vh;
}

.icon{
    height: 25px;
    width:25px;
    margin-right: 10px;
}

.row{
    margin: 10px;
    display: flex;
    flex-direction: row;
}

.scroll-view {
    white-space: nowrap;
}

.blank{
    width: 0%;
}

.infocard{
    background-color: #fff;
    border-radius: 10px;
    border-bottom: 0px solid #aaa;
    border-right: 0px solid #aaa;
    margin: 10px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: center;
}

.gridbase{
    background-color: #37bcdb;
    border-radius: 10px;
    border-bottom: 2px solid #aaa;
    border-right: 2px solid #aaa;
    margin: 10px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: center;
}

.grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
}
  
.cell {
    flex: 1 0 auto;
    width: 4.8%;
    aspect-ratio: 1;
    border: 1rpx solid #000;
}