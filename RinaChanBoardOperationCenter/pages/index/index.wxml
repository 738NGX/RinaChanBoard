<!--index.wxml-->
<view class="page">
    <block wx:if="{{device_status}}">
        <view class='status_img'>
            <image mode='widthFix' src="/images/connected.png"></image>
        </view>
    </block>
    <block wx:else>
        <view class='status_img'>
            <image mode='widthFix' src="/images/disconnected.png"></image>
        </view>
    </block>
    <view class='row'>选择控制设备</view>
    <view class="infocard"> 
        <picker bindchange="bindPickerChange" value="{{controlling_device}}" range="{{devices}}">
            <view class='row'>
                正在控制的设备: 
                <block wx:if='{{controlling_device==1}}'>
                    工程样机
                </block>
                <block wx:elif='{{controlling_device==2}}'>
                    体验机
                </block>
                <block wx:else>
                    未选择
                </block>
            </view>
        </picker>
    </view>
    <view class='row'>设备信息</view>
    <view class="infocard">
        <view class='row'>
            连接状态: 
            <block wx:if='{{device_status}}'>
                <view class='green_circle'></view>已连接
            </block>
            <block wx:else>
                <view class='red_circle'></view>未连接
            </block>
        </view>
        <view class='row'>
            下位机固件版本:
        </view>
    </view>
    <modal hidden="{{hidden_modal}}" title="密码验证" bindcancel="hideModal" bindconfirm="checkPassword">
        <view>请输入密码：</view>
        <input type="password" bindinput="passwordInput"/>
    </modal>
</view>