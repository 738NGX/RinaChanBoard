    <view class="page-body">
        <view class='logo'>
            <image src="/images/logo0.png" mode="widthFix"></image>
        </view>
        <expander header="程序信息">
            <view>RinaChan Board Operation Center</view>
            <view>璃奈板操作中心 ver. {{current_version}}</view>
            <view>开源协议: AGPL-3.0</view>
