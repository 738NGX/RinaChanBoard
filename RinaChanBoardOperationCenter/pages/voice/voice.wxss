.grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%; /* 设置为100%，以便网格填充整个容器 */
}
  
.cell {
    flex: 1 0 auto;
    width: 4.8%; /* (100% / 18) */
    aspect-ratio: 1; /* 保持宽高比为1:1 */
    border: 1rpx solid #000;
}

.infocard{
    background-color: #fafafa;
    border-radius: 10px;
    border-bottom: 2px solid #aaa;
    border-right: 2px solid #aaa;
    margin: 10px;
    padding: 30px;
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: center;
}