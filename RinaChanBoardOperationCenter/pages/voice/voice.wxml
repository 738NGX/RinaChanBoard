<view class="page">
    <view class="gridbase"><view class="grid">
        <view class="cell" 
            wx:for="{{cells}}" 
            wx:key="index" 
            data-index="{{index}}" 
            style="background-color: {{item.color ? '#f971d4' : 'white'}}">
        </view>
    </view></view>
    <view class='infocard'><block wx:for='{{voices}}' wx:key='id'>
        <view class='voicecard'>
            <button class='play_btn' bindtap='play_voice' style='width:50px;height:50px' data-id='{{item.id}}'></button>
            <view class='voice_text'>{{item.text}}</view>
        </view>
    </block></view>
</view>